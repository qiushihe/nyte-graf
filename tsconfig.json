{
  "name": "nyte-graf",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~nyte-graf-core/*": ["src/core/*"],
      "~nyte-graf-block/*": ["src/block/*"],
      "~nyte-graf-web/*": ["src/web/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
